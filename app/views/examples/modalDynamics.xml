<Alloy>
	<Window id="win" onOpen="doOpen">

		<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWin"/>
		
		<Button id="open" onClick="doShowAlert" />

		<View id="modal">
		    <View class="container">
		      <Label id="title" />
		      <Label id="message" />
		    </View>
		    <View class="buttonContainer">
		        <Button id="close" onClick="doDismissAlert" />
		    </View>
		</View>

	</Window>
</Alloy>
