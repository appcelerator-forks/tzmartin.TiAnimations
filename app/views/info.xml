<Alloy>

	<!-- iOS -->
	<NavigationWindow id="win" platform="ios">
		<Window title="About">
			<LeftNavButton>
				<Button id="btnClose" onClick="doClose" />
			</LeftNavButton>
			<WebView id="webview" />
		</Window>
	</NavigationWindow>

	<!-- Android -->
	<Window id="win" title="About" platform="android">
		<!-- displayHomeAsUp shows the ActionBar Up Button -->
		<!-- onHomeIconItemSelected is the event listener for that button -->
		<ActionBar  displayHomeAsUp="true"  onHomeIconItemSelected="doClose"/>
		<WebView id="webview" />
	</Window>

</Alloy>
